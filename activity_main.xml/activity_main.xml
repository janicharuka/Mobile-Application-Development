<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#121212">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="Profile Image" />

    <!-- Pick Image Button -->
    <Button
        android:id="@+id/btn_pick_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Image"
        android:textColor="#FFFFFF"
        android:backgroundTint="#BB86FC"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="Button to Pick Profile Image" />

    <!-- Name Input -->
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:textColorHint="#888888"
        android:textColor="#FFFFFF"
        android:backgroundTint="#BB86FC"
        android:textSize="16sp"
        android:layout_below="@id/btn_pick_image"
        android:layout_marginTop="20dp" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textColorHint="#888888"
        android:textColor="#FFFFFF"
        android:backgroundTint="#BB86FC"
        android:inputType="textEmailAddress"
        android:layout_below="@id/et_name"
        android:layout_marginTop="10dp" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="#888888"
        android:textColor="#FFFFFF"
        android:backgroundTint="#BB86FC"
        android:inputType="textPassword"
        android:layout_below="@id/et_email"
        android:layout_marginTop="10dp" />

    <!-- Re-enter Password Input -->
    <EditText
        android:id="@+id/et_reenter_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Re-enter Password"
        android:textColorHint="#888888"
        android:textColor="#FFFFFF"
        android:backgroundTint="#BB86FC"
        android:inputType="textPassword"
        android:layout_below="@id/et_password"
        android:layout_marginTop="10dp" />

    <!-- Gender Selection (Vertical Alignment) -->
    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/et_reenter_password"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="#FFFFFF"
            android:buttonTint="#BB86FC" />

        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="#FFFFFF"
            android:buttonTint="#BB86FC" />

        <RadioButton
            android:id="@+id/rb_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textColor="#FFFFFF"
            android:buttonTint="#BB86FC" />
    </RadioGroup>

    <!-- Country Spinner -->
    <Spinner
        android:id="@+id/spinner_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_gender"
        android:layout_marginTop="20dp"
        android:backgroundTint="#BB86FC" />

    <!-- Checkbox for Agreeing to Terms -->
    <CheckBox
        android:id="@+id/cb_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Agree to the Terms and Conditions"
        android:textColor="#FFFFFF"
        android:layout_below="@id/spinner_country"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Register Button -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:backgroundTint="#BB86FC"
        android:layout_below="@id/cb_agree"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="Button to register new account" />

</RelativeLayout>
